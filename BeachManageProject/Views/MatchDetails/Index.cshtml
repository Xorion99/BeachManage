                                var statDescription = Model.StatTypes.FirstOrDefault(s => s.Id == stat.StatTypeId)?.Description ?? "Descrizione non trovata";
                                <tr>
                                    <td>@statDescription</td>
                                    <td><strong>@stat.StatValue</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Team 2 Stats -->
        <div class="col-12 col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h4>@Model.Team2 🏅</h4>
                </div>
                <div class="card-body">
                    <h5><i class="fas fa-user"></i> @Model.PlayerUnoTeam2</h5>
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Statistica</th>
                                <th>Valore</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model.PlayerUnoTeamDuestat)
