                        </tbody>
                    </table>

                    <h5><i class="fas fa-user"></i> @Model.PlayerDueTeam2</h5>
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Statistica</th>
                                <th>Valore</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model.PlayerDueTeamDuestat)
                            {
                                var statDescription = Model.StatTypes.FirstOrDefault(s => s.Id == stat.StatTypeId)?.Description ?? "Descrizione non trovata";
