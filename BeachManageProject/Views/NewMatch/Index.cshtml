@model List<BeachManage.Models.Team>

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crea Nuovo Match</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="./css/NewMatchStyle.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

    <div class="container mt-5">
        <h2 class="text-center">Crea Nuovo Match</h2>

        <form method="post" asp-action="StartMatch" asp-controller="NewMatch">
            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <label for="teamA" class="form-label">Seleziona La squadra uno:</label>
                    <select id="teamA" name="teamA" class="form-select">
                        @foreach (var team in Model)
                        {
                            <option value="@team.Id">@team.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-md-6">
                    <label for="teamB" class="form-label">Seleziona La squadra due:</label>
                    <select id="teamB" name="teamB" class="form-select">
                        @foreach (var team in Model)
                        {
                            <option value="@team.Id">@team.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Inizia Partita</button>
            </div>
        </form>

    </div>

</body>
</html>
